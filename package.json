{
  "name": "morningtrader",
  "version": "0.1.0",
  "description": "First Candle Strategy IBKR Trading Tool",
  "main": "dist/app.js",
  "type": "module",
  "bin": {
    "morningtrader": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:web": "cd web && npm run build",
    "build:all": "npm run build && npm run build:web",
    "dev:web": "cd web && npm run dev",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:e2e": "vitest run --project e2e",
    "lint": "eslint src/ tests/",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Botched/MorningTrader.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Botched/MorningTrader/issues"
  },
  "homepage": "https://github.com/Botched/MorningTrader#readme",
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@fastify/static": "^8.0.2",
    "@stoqey/ib": "^1.5.3",
    "better-sqlite3": "^11.10.0",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "fastify": "^5.2.0",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.3",
    "rxjs": "^7.8.2",
    "xstate": "^5.27.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
